@startuml
left to right direction
skinparam packageStyle rectangle

package "Players"{
  actor User as p
  actor Dealer as d
}

package "BlackJack"{
  usecase "Double Down" as UC1
  usecase "Bet" as UC2
  usecase "Hit" as UC3
  usecase "Stand" as UC4 
  usecase "Bust" as UC5
  usecase "Start Game" as UC6
  usecase "Split" as UC7
}

p --> UC1
p --> UC7
p --> UC2
p --> UC3
p --> UC4
p --> UC5
p --> UC6
d --> UC3
d --> UC4
d --> UC5

@enduml
